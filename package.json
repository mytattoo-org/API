{
  "name": "my-tattoo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "cd": "yarn install; yarn migrate; yarn build; yarn start",
    "ci": "yarn install; yarn migrate; yarn test; yarn dev",
    "docker:dev": "yarn install; yarn migrate; yarn dev",
    "test": "clear && jest --runInBand",
    "app:up": "docker-compose up",
    "api:entry": "docker exec -it myapi bash",
    "docker:test": "docker exec myapi yarn test --coverage=false",
    "build": "babel src --extensions \".ts,.js\" --out-dir dist --copy-files ",
    "docker:prune": "docker-compose down && docker system prune -a -f --volumes",
    "migrate": "dotenv -- cross-var \"pg-migrations apply -D ./src/shared/migrations/ -c postgres://%DB_USER%:%DB_PASSWORD%@mydatabase:%DB_PORT%/%DB_NAME%\"",
    "dev": "ts-node-dev --poll --respawn -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/server.ts",
    "start": "ts-node-dev --poll --respawn -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules dist/server.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.18.0",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@databases/pg-migrations": "^5.0.1",
    "@prisma/client": "^3.11.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-jest": "^28.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "babel-preset-env": "^1.7.0",
    "class-validator": "^0.13.2",
    "eslint": "^8.9.0",
    "jest": "27.0.0",
    "prettier": "^2.5.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "tsyringe": "^4.6.0",
    "typescript": "^4.5.5",
    "yarn-upgrade-all": "^0.6.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.1.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "swagger-ui-express": "^4.4.0",
    "uuidv4": "^6.2.13",
    "yaml-js": "^0.3.1"
  }
}
