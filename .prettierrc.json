{
  "tabWidth": 2,
  "semi": false,
  "printWidth": 80,
  "singleQuote": true,
  "endOfLine": "auto",
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "trailingComma": "none",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^../|^./",
    "^@types/(.*)$",
    "^@modules/(.*)$",
    "^@config/(.*)$",
    "^@shared/(.*)$",
    "^@docs/(.*)$",
    "^@common/(.*)$"
  ]
}
